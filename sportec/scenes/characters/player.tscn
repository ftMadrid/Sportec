[sub_resource type="GDScript" id="GDScript_rp718"]
script/source = "class_name Player
extends CharacterBody2D

@export var speed: float = 150.0

@onready var player_animation: AnimationPlayer = $AnimationPlayer
var current_anim: String = \"\"

func _physics_process(delta: float) -> void:
	var dir := Vector2(
		Input.get_action_strength(\"p_right\") - Input.get_action_strength(\"p_left\"),
		Input.get_action_strength(\"p_down\") - Input.get_action_strength(\"p_up\")
	)
	
	if dir.length() > 0:
		dir = dir.normalized()
	
	velocity = dir * speed
	
	move_and_slide()
	
	if velocity.length() > 0:
		if current_anim != \"run\":
			player_animation.play(\"run\")
			current_anim = \"run\"
	else:
		if current_anim != \"idle\":
			player_animation.play(\"idle\")
			current_anim = \"idle\"
"

